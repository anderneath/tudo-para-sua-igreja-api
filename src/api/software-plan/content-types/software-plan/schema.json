{
  "kind": "collectionType",
  "collectionName": "software_plans",
  "info": {
    "singularName": "software-plan",
    "pluralName": "software-plans",
    "displayName": "SoftwarePlan",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "payment_price": {
      "type": "float",
      "required": true
    },
    "payment_frequency": {
      "type": "enumeration",
      "enum": [
        "one_time",
        "monthly",
        "yearly",
        "bimonthly",
        "quarterly",
        "biannually",
        "triennially",
        "quadrennially"
      ],
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "payment_currency": {
      "type": "enumeration",
      "enum": [
        "BRL",
        "USD",
        "EUR"
      ],
      "default": "BRL",
      "required": true
    },
    "free": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "software": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::software.software",
      "inversedBy": "plans"
    }
  }
}
